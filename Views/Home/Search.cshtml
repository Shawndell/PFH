@model IEnumerable<ProjectForHealing.Models.Resource>
@{

}
    <div class="container middlebody">
        <h1>Search Results for @ViewBag.Org</h1>

        @if (Model.Count() == 0)
        {
            <p>Nothing found for @ViewBag.Org in @ViewBag.Zip</p>
        }
        else
        {
            <div class="w-75 m-0 m-auto">
                @foreach (var resource in Model)
                {
                    <ul class="list-unstyled">
                        <li><h1>@Html.ActionLink(resource.OrgName, "ViewSource", new { id = resource.ResourceID })</h1></li>
                        <li>@resource.OrgAddress</li>
                        @if (resource.OrgSte != null)
                        {
                            <li> Suite @resource.OrgSte</li>
                        }
                        <li>@resource.OrgCity, @resource.OrgZip</li>
                        <li>@resource.OrgNumber</li>
                    </ul>

                }


            </div>
        }

        </div>
