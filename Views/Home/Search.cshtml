@model IEnumerable<ProjectForHealing.Models.Resource>
@{

}
    <div class="container middlebody">
        <h1>Search Results for @ViewBag.Org</h1>

        @if (Model.Count() == 0)
        {
            <p>Nothing found for @ViewBag.Org in @ViewBag.Zip</p>
        }
        else
        {
        }
            <div class="w-75 m-0 m-auto">
                @foreach (var resource in Model)
                {
                    <ul class="list-unstyled">
                        <li><h1>@Html.ActionLink(resource.OrgName, "ViewSource","Home", new { id = resource.ResourceID })</h1></li>
                        <li>@resource.OrgAddress</li>
                        @if (resource.OrgSte != null)
                        {
                            <li> Suite @resource.OrgSte</li>
                        }
                        <li>@resource.OrgCity, @resource.OrgZip</li>
                        <li>@resource.OrgNumber</li>
                    </ul>

                }

    <div class="w-75 m-0 m-auto">
        @foreach (var resource in Model)
        {
            
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@Html.ActionLink(resource.OrgName, "ViewSource", new { id = resource.ResourceID })</h4>
                    <h6 class="card-subtitle mb-2 text-muted">@resource.OrgAddress </h6>
                    @if (resource.OrgSte != null)
                    {
                        <h6 class="card-subtitle mb-2 text-muted"> Suite: @resource.OrgSte </h6>
                    }
                    <p class="card-text">@resource.OrgCity, @resource.OrgZip</p>
                    <a href="#" class="card-link">@resource.OrgNumber</a>
                    <a href="#" class="card-link">@resource.WebsiteUrl</a>
                </div>


        }



    </div>

            
        }

    </div>
    <div class="modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Delete Resource</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this resource?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Delete Resource</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Resources</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Do you want to save changes made to this resource?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
