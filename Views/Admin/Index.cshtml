@using Microsoft.AspNetCore.Http;

@{
    ViewData["Title"] = "Index";
}
    
    <div class="w-75 d-inline-block">
        <img class="img-fluid w-25 float-left" src="~/ProfilePictures/@ViewBag.pic" alt="Alternate Text" />



        <div class="list-group" >
            \
            <a href="#" class="list-group-item list-group-item-action disabled active">Hello, @ViewBag.name</a>
            <a href="#" class="list-group-item list-group-item-action disabled">Phone Number: @ViewBag.number</a>
            <a href="#" class="list-group-item list-group-item-action disabled active ">Email: @ViewBag.email</a>
            <a href="#" class="list-group-item list-group-item-action disabled">Role: @ViewBag.role</a>
            <a href="/Admin/ResourceManage" class="list-group-item list-group-item-action active">Manage Resources</a>
            <a href="/Admin/Unapproved" class="list-group-item list-group-item-action">Approve/Unapprove Resources</a>
            @if (Context.Session.GetString("role") == "Master Admin")
            {
                <a href="/Admin/AddAdmin" class="list-group-item list-group-item-action active">Create New Admin</a>
            }
            <a href="/Home/Logout" class="list-group-item list-group-item-action">Logout</a>
        </div>
    </div>